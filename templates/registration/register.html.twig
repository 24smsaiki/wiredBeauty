{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        <div class="row mt-5">
            <div class="col col-md-6 mx-auto mt-5">
                <div class="card text-center mt-5 shadow-lg">
                    <div class="card-body">
                        <h2>Sign up</h2>
                        {{ form_start(registrationForm) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mt-5', 'placeholder': 'Email'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Password'}}) }}

                        <div class="text-start mt-3">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mt-2'}}) }}
                            <label for="registration_form_agreeTerms">Agree terms</label>
                        </div>

                        <input type="submit" value="Sign up" class="cta-primary-1 mt-4 shadow">

                        {{ form_end(registrationForm) }}
                        <div class="text-end mt-4">
                            <a class="mt-5" href="{{ path('login') }}">Sign in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

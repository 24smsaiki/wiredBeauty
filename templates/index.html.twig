            <div class="col d-flex text-center ms-5 mb-5">
                <div>
                    <img src="{{ asset('images/library/page_accueil/fashion-network-logo.png') }}" class="img-fluid" alt="Fashion">
                </div>
                <div class="ms-5 mt-3">
                    <img src="{{ asset('images/library/page_accueil/les_echos.png') }}" class="img-fluid" alt="Echos">
                </div>
            </div>

                    <line id="Ligne_7" data-name="Ligne 7" x1="195" transform="translate(0 7.5)" fill="none" stroke="#731459" stroke-width="2"/>
                </svg>
            </div>
        </div>

        <div class="row mt-5">
            <div id="radio_bar" class="col col-md-2 mt-5">

{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - Forgot password {% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col col-md-6 mx-auto mt-5">
                <div class="card text-center mt-5 shadow-lg">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    <div class="card-body">
                        <h2>Forgot my password</h2>
                        <form method="post">
                            <div class="input-group form-group">
                                <span class="input-group-text mt-5"><i class="fa-solid fa-user"></i></span>
                                <input type="email" name="email" id="inputEmail" class="form-control mt-5"
                                       placeholder="Enter your email address" required autofocus>
                            </div>
                            <button class="cta-primary-1 mt-4 shadow" type="submit">Submit</button>
                            <div class="mt-2">
                                <a href="{{ path('login') }}">Go back</a>
                            </div>
                        </form>
                    </div>
                    <hr>
                    <p class="text-center">Go to <a href="{{ path('login') }}">Sign in page</a> ?</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

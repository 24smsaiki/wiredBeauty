{% extends 'base.html.twig' %}

{% block title %} <title>RÃ©initialiser le mot de passe</title> {% endblock %}	

{% block body %}
<div class="row">
    <div class="container">
        <div class="block-small">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info">{{ message }}</div>
            {% endfor %}

            {{form_start(form)}}
                <h1 style="text-align: center;" class="h3 mb-3 font-weight-normal mt-5">Nouveau mot de passe</h1>
                
                <div class="row">
                    <div class="col-md-12">
                       {{form_row(form.new_password.first, { 'attr': {'class': "form-control"}})}}
                    </div>
                    <div class="col-md-12">
                       {{form_row(form.new_password.second, { 'attr': {'class': "form-control"}})}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{form_row(form.submit) }}
                    </div>
                </div>
                <hr>
            {{form_end(form)}}
        </div>
    </div>    
</div> 
{% endblock %}